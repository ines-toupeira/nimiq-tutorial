---
import { SEO } from 'astro-seo'
---

<SEO
  title="Nimiq Tutorial: Learn the Nimiq Web Client"
  description="A hands-on, interactive tutorial for mastering the Nimiq Web Client. Step-by-step lessons, code samples, and instant feedback for web-based Nimiq integration."
  openGraph={{
    basic: {
      title: 'Nimiq Tutorial: Learn the Nimiq Web Client',
      type: 'website',
      image: '/og-image.jpg',
    },
  }}
  twitter={{
    site: '@nimiq',
    creator: '@nimiq',
  }}
  canonical="https://nimiq.guide/"
  extend={{
    meta: [
      { name: 'twitter:image', content: '/og-image.jpg' },
      { name: 'twitter:title', content: 'Nimiq Tutorial: Learn the Nimiq Web Client' },
      {
        name: 'twitter:description',
        content:
          'A hands-on, interactive tutorial for mastering the Nimiq Web Client. Step-by-step lessons, code samples, and instant feedback for web-based Nimiq integration.',
      },
    ],
  }}
/>

<slot name="title" />
<slot name="links" />
<slot name="meta" />

<!-- Nimiq Feedback Widget CSS/JS -->
<link rel="stylesheet" href="/widget.css" />
<script is:inline src="/widget.js"></script>

<!-- Force light mode by preventing dark theme attributes -->
<script is:inline>
  // Force light mode by ensuring data-theme is always 'light'
  // This overrides any system preferences or theme switching attempts
  document.documentElement.setAttribute('data-theme', 'light')

  // Watch for any attempts to change the theme and override them
  const observer = new MutationObserver((mutations) => {
    mutations.forEach((mutation) => {
      if (mutation.type === 'attributes' && mutation.attributeName === 'data-theme') {
        const currentTheme = document.documentElement.getAttribute('data-theme')
        if (currentTheme !== 'light') {
          document.documentElement.setAttribute('data-theme', 'light')
        }
      }
    })
  })

  observer.observe(document.documentElement, {
    attributes: true,
    attributeFilter: ['data-theme'],
  })
</script>
